    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-like": "^1.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "origami-core-lib": "^0.1.3",
